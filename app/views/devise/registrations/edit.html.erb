<div class="account-form">
  <h2 class="devise-title">ー 編集する ー</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <i class="fa-solid fa-key"></i>
      <%= f.password_field :password, autocomplete: "new-password", class: "input-form", placeholder: "新しいパスワード(６文字以上)" %>
    </div>

    <div class="field">
      <i class="fa-solid fa-key"></i>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-form", placeholder: "確認用パスワード" %>
    </div>

    <div class="field">
      <i class="fa-solid fa-lock"></i>
      <%= f.password_field :current_password, autocomplete: "current_password", class: "input-form", placeholder: "現在のパスワード" %>
    </div>

    <div class="actions">
      <%= f.submit "更新する" %>
      <%= link_to "キャンセル", :back, class:'link-button' %>
    </div>
  <% end %>

  <%= button_to registration_path(resource_name), class: "trash-field", data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete  do %>
    <i class="fa-solid fa-trash"></i>アカウントを削除
  <% end %>
</div>
