<% provide(:title, "ユーザー/新規登録") %>
<div class='devise-form'>
  <h2 class='devise-title'>ー 新規アカウント作成 ー</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local:true, data: { turbo: false }) do |f| %>
    <% if @user.errors.any? %>
    <% end %>

    <div class="field">
      <span class="Form-Item-Label-Required">必須</span><i class="fa-solid fa-user"></i>
      <div class="message">
        <a href="#">
          <% if @user.errors.include?(:username) %>
            <div class='i-red'>
              <i class="fa-solid fa-circle-exclamation i-red"></i>
            </div>
            <span class="remark error-message"><%= @user.errors.full_messages_for(:username).first %></span>
          <% end %>
        </a>
      </div>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input-form", placeholder: "ユーザー名" %>
    </div>

    <div class="field">
      <span class="Form-Item-Label-Required">必須</span><i class="fa-solid fa-envelope"></i>
      <div class="message">
        <a href="#">
          <% if @user.errors.include?(:email) %>
            <div class='i-red'>
              <i class="fa-solid fa-circle-exclamation i-red"></i>
            </div>
            <span class="remark error-message"><%= @user.errors.full_messages_for(:email).first %></span>
          <% end %>
        </a>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-form", placeholder: "メールアドレス" %>
    </div>

    <div class="field">
      <span class="Form-Item-Label-Required">必須</span><i class="fa-solid fa-key"></i>
      <div class="message">
        <a href="#">
          <% if @user.errors.include?(:password) %>
            <div class='i-red'>
              <i class="fa-solid fa-circle-exclamation i-red"></i>
            </div>
            <span class="remark error-message"><%= @user.errors.full_messages_for(:password).first %></span>
          <% end %>
        </a>
      </div>
      <%= f.password_field :password, id: "password", autocomplete: "new-password", class: "input-password", placeholder: "パスワード" %>
      <i id="eye" class="fa-solid fa-eye-slash"></i>
    </div>

    <div class="field">
      <span class="Form-Item-Label-Required">必須</span><i class="fa-solid fa-lock"></i>
      <div class="message">
        <a href="#">
          <% if @user.errors.include?(:password_confirmation) %>
            <div class='i-red'>
              <i class="fa-solid fa-circle-exclamation i-red"></i>
            </div>
            <span class="remark error-message"><%= @user.errors.full_messages_for(:password_confirmation).first %></span>
          <% end %>
        </a>
      </div>
      <%= f.password_field :password_confirmation, id: "password-confirmation", autocomplete: "new-password", class: "input-password", placeholder: "確認用パスワード" %>
      <i id="eye-confirmation" class="fa-solid fa-eye-slash"></i>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
      <%= link_to "ログインはこちら", new_user_session_path, class:'link-button' %>
    </div>
  <% end %>
</div>

<% content_for :js do %>
  <%= javascript_import_module_tag "passwords/new" %>
<% end %>
